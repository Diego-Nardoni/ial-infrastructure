{
  "servers": [
    {
      "name": "aws-real-executor",
      "command": "python3",
      "args": ["/home/ial/mcp-tools/aws_real_server.py"],
      "tools": ["execute_aws_real"]
    },
    {
      "name": "aws-core",
      "command": "awslabs.core-mcp-server",
      "args": [],
      "tools": ["ec2", "s3", "iam", "lambda", "dynamodb", "apigateway"]
    },
    {
      "name": "aws-cloud-control",
      "command": "awslabs.ccapi-mcp-server",
      "args": [],
      "tools": ["create_resource", "update_resource", "delete_resource", "get_resource"]
    },
    {
      "name": "ial-core",
      "command": "python3",
      "args": ["/home/ial/mcp-tools/server.py"],
      "tools": ["setup_ial", "update_yaml_file", "git_commit", "git_push"]
    },
    {
      "name": "well-architected-mcp",
      "command": "python3",
      "args": ["mcp/well_architected.py"],
      "tools": ["review_workload"]
    },
    {
      "name": "rag-mcp",
      "command": "python3",
      "args": ["rag/rag_cli.py"],
      "tools": ["query", "index"]
    },
    {
      "name": "github-mcp-server",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "tools": ["create_repository", "search_repositories", "create_issue", "create_pull_request", "get_file", "push_files", "create_or_update_file", "search_code", "fork_repository"]
    },
    {
      "name": "aws-cloudcontrol-mcp",
      "command": "npx",
      "args": ["-y", "@aws-sdk/mcp-server-cloudcontrol"],
      "env": {
        "AWS_REGION": "${AWS_REGION:-us-east-1}"
      },
      "tools": ["create_resource", "get_resource", "update_resource", "delete_resource", "list_resources", "get_resource_request_status"]
    }
  ],
  "mcpServers": {
    "ial-tools": {
      "command": "python3",
      "args": ["/home/ial/mcp-tools/server.py"],
      "tools": [
        {
          "name": "setup_ial",
          "description": "Setup completo do IaL - detecta AWS account, cria recursos, configura GitHub",
          "parameters": {}
        },
        {
          "name": "update_yaml_file",
          "description": "Update YAML infrastructure files",
          "parameters": {
            "file_path": "Path to YAML file",
            "yaml_path": "Dot-notation path",
            "action": "append|remove|replace",
            "value": "Value to apply"
          }
        },
        {
          "name": "git_commit",
          "description": "Commit changes to Git",
          "parameters": {
            "files": "List of files",
            "message": "Commit message"
          }
        },
        {
          "name": "git_push",
          "description": "Push commits to remote",
          "parameters": {
            "remote": "Remote name (default: origin)",
            "branch": "Branch name (default: main)"
          }
        }
      ]
    },
    "github-mcp": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "tools": [
        {
          "name": "create_repository",
          "description": "Create a new GitHub repository",
          "parameters": {
            "name": "Repository name",
            "description": "Repository description",
            "private": "Whether the repository should be private"
          }
        },
        {
          "name": "create_issue",
          "description": "Create a new issue in a repository",
          "parameters": {
            "owner": "Repository owner",
            "repo": "Repository name",
            "title": "Issue title",
            "body": "Issue body"
          }
        },
        {
          "name": "create_pull_request",
          "description": "Create a new pull request",
          "parameters": {
            "owner": "Repository owner",
            "repo": "Repository name",
            "title": "PR title",
            "body": "PR body",
            "head": "Source branch",
            "base": "Target branch"
          }
        },
        {
          "name": "search_code",
          "description": "Search for code in GitHub repositories",
          "parameters": {
            "query": "Search query",
            "sort": "Sort order",
            "order": "Sort direction"
          }
        }
      ]
    },
    "aws-cloudcontrol-mcp": {
      "command": "npx",
      "args": ["-y", "@aws-sdk/mcp-server-cloudcontrol"],
      "env": {
        "AWS_REGION": "${AWS_REGION:-us-east-1}"
      },
      "tools": [
        {
          "name": "create_resource",
          "description": "Create an AWS resource using Cloud Control API",
          "parameters": {
            "type_name": "AWS resource type (e.g., AWS::S3::Bucket)",
            "desired_state": "Resource configuration in JSON format"
          }
        },
        {
          "name": "get_resource",
          "description": "Get an AWS resource using Cloud Control API",
          "parameters": {
            "type_name": "AWS resource type",
            "identifier": "Resource identifier"
          }
        },
        {
          "name": "update_resource",
          "description": "Update an AWS resource using Cloud Control API",
          "parameters": {
            "type_name": "AWS resource type",
            "identifier": "Resource identifier",
            "patch_document": "JSON patch document for updates"
          }
        },
        {
          "name": "delete_resource",
          "description": "Delete an AWS resource using Cloud Control API",
          "parameters": {
            "type_name": "AWS resource type",
            "identifier": "Resource identifier"
          }
        },
        {
          "name": "list_resources",
          "description": "List AWS resources of a specific type",
          "parameters": {
            "type_name": "AWS resource type"
          }
        },
        {
          "name": "get_resource_request_status",
          "description": "Get the status of a resource operation request",
          "parameters": {
            "request_token": "Request token from a previous operation"
          }
        }
      ]
    }
  }
}
